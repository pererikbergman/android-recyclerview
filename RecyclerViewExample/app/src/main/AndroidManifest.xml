<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jayway.recyclerview" >

    <permission android:name="android.permission.RECORD_AUDIO"></permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".RecyclerViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.jayway.recyclerview.basiclist.BasicListActivity"></activity>
        <activity android:name=".foldablelist.FoldableListActivity"></activity>
        <activity android:name=".sectionlist.SectionListActivity"></activity>
    </application>

</manifest>
